{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TypeScript (ts-node-dev)",
      "runtimeExecutable": "ts-node-dev",
      "runtimeArgs": [
        "--respawn",
        "--transpile-only",
        "--inspect"
      ],
      "args": ["src/server.ts"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "protocol": "inspector"
    }
  ]
}
